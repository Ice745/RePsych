<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity">

    <View
            android:id="@+id/divider3"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/email_in" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/pass_in" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:visibility="invisible"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/cpass_in" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:visibility="invisible"/>
    <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_btn" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/cpass_in" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="296dp" android:background="@color/colorPrimary"
            style="@style/Widget.AppCompat.Button" android:textAppearance="@style/TextAppearance.AppCompat"
            android:fontFamily="@font/catamaran_medium" android:textSize="18sp" android:textColor="@color/text"
            android:paddingLeft="20dp" android:paddingRight="20dp"/>
    <TextView
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Signup" android:fontFamily="@font/catamaran_medium"
            android:textSize="30sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="136dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="136dp" android:layout_marginTop="98dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toTopOf="@+id/email_in"
            android:textColor="@color/design_default_color_primary"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_in"
            android:hint="Email" android:fontFamily="@font/catamaran_medium" android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="7dp"
            android:layout_marginTop="115dp" app:layout_constraintTop_toBottomOf="@+id/Signup"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass_in"
            android:hint="Password" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/divider3" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/divider4" android:fontFamily="@font/catamaran_medium"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="7dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Confirm Password" android:id="@+id/cpass_in" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/divider4" android:fontFamily="@font/catamaran_medium"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="7dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>