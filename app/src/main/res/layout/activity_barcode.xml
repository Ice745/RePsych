<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".barcode">

    <Button android:id="@+id/scan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan" android:fontFamily="@font/catamaran_medium" android:textSize="18sp"
            android:textColor="@color/text" android:background="@color/zxing_viewfinder_laser"
            android:textStyle="bold" android:textAlignment="center" android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:paddingLeft="60dp" android:paddingRight="60dp"
            android:layout_marginStart="30dp"/>

    <TextView
            android:id="@+id/scan_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/scan_button" android:fontFamily="@font/catamaran_medium" android:textSize="18sp"
    />
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/_completeList"
            android:layout_marginTop="230dp" android:scrollIndicators="top" android:scrollbars="vertical"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/balance_txt"
            android:fontFamily="@font/catamaran_medium" android:textStyle="bold" android:textAlignment="center"
            android:textSize="40sp" android:layout_marginLeft="120dp" android:layout_marginRight="120dp"
            android:layout_alignParentStart="true" android:layout_marginStart="120dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="121dp" android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>
    <Button
            android:text="Pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pay_btn"
            android:layout_marginTop="100dp" android:layout_marginBottom="20dp" android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/catamaran_medium" android:textSize="18sp" android:textAlignment="center"
            android:textColor="@color/text" android:background="@color/colorPrimary"
            android:paddingLeft="40dp" android:paddingRight="40dp" android:layout_marginStart="250dp"/>

</RelativeLayout>