<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="61dp" app:layout_constraintTop_toBottomOf="@+id/WelcomeText"
    />
    <Button
            android:text="@string/action_sign_in_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signin"
            android:elevation="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_up"
            app:layout_constraintVertical_bias="0.52" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="161dp" style="@android:style/Widget.Button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="162dp"
            android:background="@color/colorPrimary" android:fontFamily="@font/catamaran_medium"
            android:textSize="18sp" android:textColor="@color/text" android:textAlignment="center"/>
    <Button
            android:text="@string/action_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="165dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp"
            app:layout_constraintTop_toBottomOf="@+id/signin" style="@android:style/Widget.Button"
            android:elevation="24dp" android:background="@color/colorPrimary"
            android:fontFamily="@font/catamaran_medium" android:textColor="@color/text" android:textSize="18sp"
            android:textAlignment="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WelcomeText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="127dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="127dp" android:layout_marginTop="230dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="97dp"
            app:layout_constraintBottom_toTopOf="@+id/divider" android:fontFamily="@font/catamaran_medium"
            android:textSize="36sp" android:textColor="@color/colorAccent" android:textStyle="bold"
            android:textAlignment="center" android:lineSpacingExtra="8sp" android:visibility="visible"/>

</android.support.constraint.ConstraintLayout>