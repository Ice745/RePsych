<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <View
            android:id="@+id/divider2"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/emailText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/passwordTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="40dp" android:visibility="invisible"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailText"
            android:hint="Email" android:fontFamily="@font/catamaran_medium" android:textSize="24sp"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/LoginText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="97dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="101dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTxt" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" android:layout_marginBottom="126dp"
            app:layout_constraintBottom_toTopOf="@+id/login_btn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="101dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="97dp" android:hint="Password" android:fontFamily="@font/catamaran_medium"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.486"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn"
            style="@style/Widget.AppCompat.Button" android:textAppearance="@style/TextAppearance.AppCompat"
            android:fontFamily="@font/catamaran_medium" android:textSize="18sp"
            android:background="@color/colorPrimary" android:textColor="@color/text"
            app:layout_constraintTop_toBottomOf="@+id/passwordTxt" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="306dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"/>
    <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LoginText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="186dp" android:fontFamily="@font/catamaran_medium" android:textSize="36sp"
            android:textColor="@color/design_default_color_primary" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="186dp" android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toTopOf="@+id/emailText"/>
</android.support.constraint.ConstraintLayout>